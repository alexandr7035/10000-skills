<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_new_skill_dialog"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/new_skill_dialog_title"
        android:textSize="@dimen/dialog_new_skill_title_text_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/skillNameField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_new_skill_dialog_button"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/new_skill_dialog_cancel"
            android:textSize="@dimen/dialog_new_skill_button_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_new_skill_dialog_button"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/new_skill_dialog_create"
            android:textSize="@dimen/dialog_new_skill_button_text_size"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>