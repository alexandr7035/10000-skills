<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_delete_skills_dialog_background"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/deleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/dialog_delete_skills_text_size" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_delete_skill_dialog_btn"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:padding="3dp"
            android:text="@string/delete_skill_dialog_cancel"
            android:textColor="@color/color_delete_skills_dialog_btn_text"
            android:textSize="@dimen/dialog_delete_skills_button_text_size" />

        <TextView
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_delete_skill_dialog_btn"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:padding="3dp"
            android:text="@string/delete_skill_dialog_delete"
            android:textColor="@color/color_delete_skills_dialog_btn_text"
            android:textSize="@dimen/dialog_delete_skills_button_text_size" />

    </LinearLayout>


</LinearLayout>